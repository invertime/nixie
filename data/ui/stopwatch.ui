<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="NixieStopwatchPage" parent="GtkBox">
    <child>
      <object class="GtkBox">
        <property name="valign">center</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox" id="time_container">
            <property name="halign">center</property>
            <property name="margin_bottom">18</property>
            <child>
              <object class="GtkLabel" id="hours_label">
                <property name="label">00</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <style>
                  <class name="numeric" />
                  <class name="dim-label" />
                  <class name="display" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">:</property>
                <property name="vexpand">true</property>
                <style>
                  <class name="display" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="minutes_label">
                <property name="label">00</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <style>
                  <class name="numeric" />
                  <class name="dim-label" />
                  <class name="display" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">:</property>
                <property name="vexpand">true</property>
                <property name="valign">center</property>
                <style>
                  <class name="display" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="seconds_label">
                <property name="label">00</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <style>
                  <class name="numeric" />
                  <class name="seconds-label" />
                  <class name="display" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">.</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <style>
                  <class name="display" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="miliseconds_label">
                <property name="valign">end</property>
                <property name="label">0</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <property name="vexpand">true</property>
                <style>
                  <class name="display" />
                  <class name="miliseconds-label" />
                  <class name="numeric" />
                </style>
              </object>
            </child>
            <style>
              <class name="stopped-stopwatch" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <property name="margin-end">18</property>
            <property name="margin-start">18</property>
            <child>
              <object class="HeFillButton" id="start_btn">
                <property name="label">Start</property>
                <property name="width_request">120</property>
                <property name="use_underline">True</property>
                <property name="hexpand">True</property>
                <property name="halign">start</property>
                <property name="color">purple</property>
                <signal name="clicked" handler="handle_on_start_btn_click" swapped="true" />
              </object>
            </child>
            <child>
              <object class="HeFillButton" id="clear_btn">
                <property name="sensitive">false</property>
                <property name="label">Lap</property>
                <property name="width_request">120</property>
                <property name="halign">end</property>
                <property name="color">purple</property>
                <signal name="clicked" handler="handle_on_clear_btn_click" swapped="true" />
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkRevealer" id="laps_revealer">
            <property name="transition_type">crossfade</property>
            <child>
              <object class="GtkListBox" id="laps_list">
                <property name="valign">start</property>
                <property name="selection_mode">none</property>
                <property name="margin-top">18</property>
                <property name="margin-bottom">18</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <style>
                  <class name="boxed-list" />
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
